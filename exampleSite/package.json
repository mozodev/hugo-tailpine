{
  "name": "hugo-tailpine",
  "version": "0.0.1",
  "description": "Hugo theme using tailwindcss and alpinejs.",
  "author": "yeongtaek, Hong<mozodev@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@alpinejs/collapse": "^3.7.3",
    "@alpinejs/focus": "^3.7.3",
    "@alpinejs/intersect": "^3.7.3",
    "@alpinejs/persist": "^3.7.3",
    "@kingshott/iodine": "^7.0.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "alpinejs": "^3.8.1",
    "autoprefixer": "^10.4.1",
    "concurrently": "^6.5.1",
    "cssnano": "^5.0.14",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^3.0.8"
  },
  "scripts": {
    "start": "concurrently npm:watch:*",
    "dev": "concurrently npm:watch:*",
    "watch:tailwindcss": "tailwindcss -c ../assets/_jsconfig/tailwind.config.js -i ../assets/app.css -o ../static/assets/app.min.css --watch --minify",
    "watch:hugo": "hugo serve -D",
    "build:tailwindcss": "tailwindcss -c ../assets/_jsconfig/tailwind.config.js -i ../assets/app.css -o ../static/assets/app.min.css --minify",
    "build:hugo": "hugo --gc --minify",
    "deploy": "ntl build && ntl deploy --prod --message='Deploy from cli.'"
  }
}
